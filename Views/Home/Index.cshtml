@using System.Security.Claims

@{
    ViewData["Title"] = "HomePageUser";
    Layout = "_Layout";
}

<main role="main">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="first-slide" src="~/img/7.jpg" alt="First slide">
                <div class="container">
                    <div class="carousel-caption text-left">
                        <h1>Grace Art Auction</h1>
                        <p>We make buying and selling art easier, connecting thousands of enthusiast worldwide.</p>
                        <p><a class="btn btn-lg btn-primary btn-block" href="#divide" role="button">Find out more</a></p>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <img class="second-slide" src="~/img/1.jpg" alt="Second slide">
                <div class="container">
                    <div class="carousel-caption">
                        <h1>Recent auctions</h1>
                        <p>Many of thrilling art pieces are waiting for their connoisseurs</p>
                        <p><a class="btn btn-lg btn-primary btn-block" asp-controller="Auctions" asp-action="Upcoming" role="button">Browse upcoming auctions</a></p>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <img class="third-slide"src="~/img/3.jpg" alt="Third slide">
                <div class="container">
                    <div class="carousel-caption text-right">
                        <h1>Connect with artists</h1>
                        <p>Don't miss a fantastic opportunity to communicate with people who create art!</p>
                        <p><a class="btn btn-lg btn-primary btn-block" asp-controller="Artists" asp-action="Index" role="button">Learn more</a></p>
                    </div>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <div class="container marketing">

        <!-- Three columns of text below the carousel -->
        <div class="row">
            <div class="col-lg-4">
                <img class="rounded-circle" src="~/img/auction.jpg" alt="Generic placeholder image" width="140" height="140">
                <h2>Auctions</h2>
                <p>Grace AA feature amazing masterpieces with comprehensive information about them.</p>
                <p><a class="btn btn-secondary btn-block" asp-controller="Auctions" asp-action="Upcoming" role="button">View details &raquo;</a></p>
            </div><!-- /.col-lg-4 -->
            <div class="col-lg-4">
                <img class="rounded-circle" src="~/img/artist.jpg" alt="Generic placeholder image" width="140" height="140">
                <h2>Artists</h2>
                <p>We appreciate art and help artists from all over the world find their audience.</p>
                <p><a class="btn btn-secondary btn-block" asp-controller="Artists" asp-action="Index" role="button">View details &raquo;</a></p>
            </div><!-- /.col-lg-4 -->
            <div class="col-lg-4">
                <img class="rounded-circle" src="~/img/museum.png" alt="Generic placeholder image" width="140" height="140">
                <h2>Partners</h2>
                <p>Many first class museums and galleries worldwide are our partners. </p>
                <p><a class="btn btn-secondary btn-block" asp-controller="Galleries" asp-action="Index" role="button">View details &raquo;</a></p>
            </div><!-- /.col-lg-4 -->
        </div><!-- /.row -->
        <!-- START THE FEATURETTES -->

        <hr class="featurette-divider" id="divide">

        <div class="row featurette">
            <div class="col-md-7">
                <h2 class="featurette-heading">Grace AA is a bridge between artists and collectors.</h2>
                <p class="lead">Connection in art world has never been easier. We unite thousands of passionate art lovers worldwide.</p>
            </div>
            <div class="col-md-5">
                <img class="featurette-image img-fluid mx-auto" src="~/img/museum_connect.jpg">
            </div>
        </div>

        <hr class="featurette-divider">

        <div class="row featurette">
            <div class="col-md-7 order-md-2">
                <h2 class="featurette-heading">“Art washes away from the soul the dust of everyday life.” <span class="text-muted">― Pablo Picasso</span></h2>
                <p class="lead"></p>
            </div>
            <div class="col-md-5 order-md-1">
                <img class="featurette-image img-fluid mx-auto" src="~/img/encourage.jpg" alt="Generic placeholder image">
            </div>
        </div>

        <hr class="featurette-divider">

        <div class="row featurette">
            <div class="col-md-7">
                <h2 class="featurette-heading">“Art enables us to find ourselves and lose ourselves at the same time.”<span class="text-muted">― Thomas Merton</span></h2>
               
            </div>
            <div class="col-md-5">
                <img class="featurette-image img-fluid mx-auto" src="~/img/museum_vincent.jpg" alt="Generic placeholder image">
            </div>
        </div>

        <hr class="featurette-divider">

        <!-- /END THE FEATURETTES -->

    </div><!-- /.container -->
  </main>

