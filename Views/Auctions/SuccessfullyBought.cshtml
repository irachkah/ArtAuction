@model ArtAuction.Models.Painting
@{
    ViewData["Title"] = "AddArtist";
    Layout = "_Layout";
}

<div class="container">
    <h2 class="mt-3"> Congratulations! You successfully bought @Model.Title for @Model.Estimated. </h2>
    <h3 class="mt-3 text-center">You can check out information about your new painting in your private collection section</h3>
    <div class="text-center">
        <img class="img-fluid m-5" src="~/content/paintings/@Model.ImgId" width="600" height="900" alt="Painting">
    </div>
</div>
