@using Microsoft.AspNetCore.Mvc.Razor.Extensions
@model ArtAuction.Models.Painting
@{
    ViewData["Title"] = "DeleteCollector";
    Layout = "_Layout";
}

<div class="container">
    <h1 class="mt-3 text-center font-weight-bold"> @Model.Title</h1>
    <div class="text-center">
        <img class="img-fluid" src="~/content/paintings/@Model.ImgId" alt="Painting">
    </div>
    <p class="text-center lead font-weight-normal"><span class="font-weight-bold">Creation date:</span> @Model.CreationDate</p>
    <p class="text-center lead font-weight-normal"><span class="font-weight-bold">Artist:</span> @Model.Artist</p>
    <p class="text-center lead font-weight-normal"><span class="font-weight-bold">Style:</span> @Model.Style</p>
    <p class="text-center lead font-weight-normal"><span class="font-weight-bold">Current location:</span> @Model.CurrentlyLocated</p>
    <p class="text-center lead font-weight-normal"><span class="font-weight-bold">Estimated:</span> @Model.Estimated</p>
    @if (Model.IsBought)
    {
        if (Model.CurrentlyLocated == "PrivateCollection" && !User.IsInRole("Administrator"))
        {
            <p class="text-center">Bought for a private collection</p>
        }
        else
        {
            <p class="text-center">Bought by @Model.OwnerName </p>
        }
    }
    else
    {
        <form asp-controller="Auctions" asp-action="BuyPainting" asp-route-paintingId="@Model.Id" asp-route-auctionId="@Model.OwnerId" method="post">
            <input type="submit" value="Buy a painting" class="btn btn-info btn-lg mb-3" />
        </form>

    }
    @if (User.IsInRole("Administrator"))
    {
        <form asp-controller="Auctions" asp-action="DeletePainting" asp-route-auctionId="@Model.OwnerId" asp-route-paintingId="@Model.Id" method="post">
            <input type="submit" value="Delete" class="btn btn-danger btn-lg mb-3" />
        </form>
    }
</div>


